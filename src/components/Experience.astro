---
import { Icon } from 'astro-icon/components';
import experiences from '../json/experiences.json'
---

<section id="experiencia" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center reveal dark:text-white">
      Mi <span class="text-[#4CA5EC]">Experiencia</span>
    </h2>
    <div class="max-w-3xl mx-auto">
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-4 md:left-1/2 transform md:-translate-x-1/2 h-full w-0.5 bg-[#4CA5EC]"></div>

        <!-- Timeline items -->
        {experiences.map((exp, index) => (
          <div class={`relative flex flex-col md:flex-row mb-12 reveal ${
            index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"
          }`}>
            <!-- Timeline dot -->
            <div class="absolute left-4 md:left-1/2 transform -translate-x-1/2 w-8 h-8 rounded-full bg-[#4CA5EC] flex items-center justify-center z-10">
              {exp.type === "work" ? (
                <Icon name="lucide:briefcase" class="h-4 w-4 text-white" />
              ) : (
                <Icon name="lucide:graduation-cap" class="h-4 w-4 text-white" />
              )}
            </div>

            <!-- Content -->
            <div class={`ml-12 md:ml-0 md:w-1/2 ${index % 2 === 0 ? "md:pr-12" : "md:pl-12"}`}>
              <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
                <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-1">{exp.title}</h3>
                <h4 class="text-[#4CA5EC] font-medium mb-2">{exp.company}</h4>
                <div class="flex items-center text-gray-500 dark:text-gray-400 mb-4">
                  <Icon name="lucide:calendar-days" class="h-4 w-4 mr-2" />
                  <span>{exp.period}</span>
                </div>
                <p class="text-gray-600 dark:text-gray-300">{exp.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
