---
import { Icon } from 'astro-icon/components';
import projects from '../json/projects.json';
---

<section id="proyectos" class="py-20 lg:py-32 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-6 lg:px-12 xl:px-20 max-w-7xl">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-16 lg:mb-20 text-center reveal dark:text-white">
      Mis <span class="text-[#4CA5EC]">Proyectos</span>
    </h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      {projects.map((project) => (
        <div class="bg-white dark:bg-gray-900 rounded-2xl overflow-hidden border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-shadow duration-300 reveal flex flex-col">
          <div class="h-56 lg:h-64 overflow-hidden">
            <img
              src={project.image || "/images/projects/placeholder.jpg?height=300&width=500"}
              alt={project.title}
              class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
            />
          </div>
          <div class="p-8 flex flex-col flex-grow">
            <h3 class="text-xl lg:text-2xl font-bold mb-4 text-gray-800 dark:text-white">{project.title}</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-6">
              {project.technologies.map((tech) => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-sm font-medium">
                  {tech}
                </span>
              ))}
            </div>
            <div class="mt-auto flex justify-between">
              {project.github && (
                <a 
                  href={project.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-700 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
                >
                  <Icon name="lucide:github" class="mr-2 h-4 w-4" />
                  CÃ³digo
                </a>
              )}
              {project.demo && (
                <a 
                  href={project.demo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-6 py-3 bg-[#4CA5EC] rounded-lg text-sm font-medium text-white hover:bg-[#4CA5EC]/90 transition-colors"
                >
                  <Icon name="lucide:external-link" class="mr-2 h-4 w-4" />
                  Demo
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
