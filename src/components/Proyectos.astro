---
import proyectos from '@/json/proyectos.json'
import Proyecto from './Proyecto.astro'
---
<section id="proyectos">
  <article>
    <h2>Mis proyectos</h2>
    <p>Proyectos que he realizado</p>
  </article>
  <article>
  {
    proyectos.map(({nombre, descripcion, altImagen, desplegado, github, srcId})=> {
      return (
        <Proyecto nombre={nombre} descripcion={descripcion} altImagen={altImagen} desplegado={desplegado} github={github} srcId={srcId} />
      )
    })
  }
  </article>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
    width: 95%;
    margin: 0 auto;
    padding: 30px 0;
    & > article:first-child {
      text-align: center;
    }
    & > article:last-child {
      display: grid;
      gap: 50px;
    }
  }
  @media screen and (min-width: 1024px) {
    section {
      max-width: 75%;
      margin: 0 auto;
      & > article:last-child {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }
  }
</style>